<%= render "layouts/header" %>

<script>
  $(document).ready(function (){
    $('.modal').modal();
  });
</script>

<div class="container">
  <div class="row">
    <span class="col s8 offset-s2">
      <h1 class="center complete-title">Â¡Tu denuncia ha sido registrada!</h1>
    </span>
  </div>
  
    <form class="col s10 offset-s1" style="margin-bottom: 100px;">
    <div class="row">
      <div class="input-field col s4">
          <input id="complaint_department_" type="text" value="<%= @complaint.department %>" class="validate" disabled/> 
          <label for="complaint_department_" class="active">Departamento:</label>
      </div>
      <div class="input-field col s4">
        <input id="complaint_city_" type="text" value="<%= @complaint.city %>" class="validate" disabled/>
        <label for="complaint_city_" class="active">Municipio:</label>
      </div>
      <div class="input-field col s4">
        <input id="complaint_clasification_" type="text" value="<%= @complaint.clasification %>" class="validate" disabled/>
        <label for="complaint_clasification_" class="active">Grupo social:</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="complaint_date_event_" type="date" value="<%= @complaint.date_event.strftime('%F') %>" disabled/>
        <label for="complaint_date_event_">Fecha del suceso:</label>
      </div>
      <div class="input-field col s6">
        <input id="complaint_email_" type="email" value="<%= @complaint.email %>" class="validate" disabled>
        <label for="complaint_email_" class="active">Correo de contacto:</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="complaint_description_" value="" class="materialize-textarea" style="overflow-y: scroll; height: 200px;" disabled><%= @complaint.description %></textarea>
        <label for="complaint_description_" class="active">Cuentanos como sucedieron los hechos:</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="complaint_file_" type="text" value="<%= @complaint.file %>" class="validate" disabled>
        <label for="complaint_file_" class="active">Archivos</label>
      </div>
    </div>
    <br>
    <a href="#modal1" class="waves-effect waves-light btn modal-trigger">Finalizar</a>
    <div id="modal1" class="modal">
      <div class="modal-content">
        <h4 class="center">Gracias por compartirnos tu caso</h4>
        <p class="center">Espera el aviso de alguna de las entidades que seleccionaste</p>
      </div>
      <div class="modal-footer">
        <a href="<%= root_path %>" class="modal-close waves-effect waves-green btn-flat">Aceptar</a>
      </div>
    </div>
  </form>
  
  
  
    
 


</div>

